<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:contentPadding="12dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Project Name"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Project Description"
            android:ellipsize="end"

            android:maxLines="2"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/project_name" />

        <TextView
            android:id="@+id/project_stars_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_star"
            android:ems="2"
            style="@style/TextAppearance.AppCompat.Caption"

            android:layout_below="@+id/project_description"/>

        <TextView
            android:id="@+id/project_forks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0"
            android:ems="2"
            android:layout_marginLeft="8dp"
            android:drawableRight="@drawable/ic_fork"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_toRightOf="@+id/project_stars_count"
            android:layout_below="@+id/project_description"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wherever"
            android:paddingRight="8dp"
            android:layout_toRightOf="@+id/project_forks_count"
            android:layout_below="@+id/project_description"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>